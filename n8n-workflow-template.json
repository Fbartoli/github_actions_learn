      "id": "get-artifacts",
      "name": "Get Artifacts",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [1340, 400]
    },
    {
      "parameters": {
        "amount": 10,
        "unit": "seconds"
      },
      "id": "polling-wait",
      "name": "Wait Before Retry",
      "type": "n8n-nodes-base.wait",
      "typeVersion": 1,
      "position": [900, 500]
    },
    {
      "parameters": {
        "jsCode": "// Extract and format the workflow results\nconst jobs = $input.first().json.jobs;\nconst artifacts = $input.last().json.artifacts;\n\n// Get the main job (hello-world)\nconst mainJob = jobs.find(job => job.name === 'hello-world');\n\n// Get the response artifact\nconst responseArtifact = artifacts.find(artifact => artifact.name === 'workflow-response');\n\n// Format the response\nconst result = {\n  workflow_run_id: $node[\"Check Workflow Status\"].json[\"workflow_runs\"][0][\"id\"],\n  status: mainJob?.conclusion || 'unknown',\n  completed_at: mainJob?.completed_at,\n  duration_seconds: mainJob ? Math.round((new Date(mainJob.completed_at) - new Date(mainJob.started_at)) / 1000) : null,\n  outputs: mainJob?.outputs || {},\n  artifact_download_url: responseArtifact?.archive_download_url || null,\n  logs_url: $node[\"Check Workflow Status\"].json[\"workflow_runs\"][0][\"html_url\"]\n};\n\nreturn { json: result };"
      },
      "id": "format-results",
      "name": "Format Results",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1560, 300]
    }
